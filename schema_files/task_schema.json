{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
      "completed": {
        "type": "boolean",
        "description": "Indicates whether the task has been completed"
      },
      "created": {
        "type": "string",
        "format": "date-time",
        "description": "Timestamp of when the task was created"
      },
      "details": {
        "type": "string",
        "description": "Details or description of the task"
      },
      "title": {
        "type": "string",
        "description": "Title of the task"
      },
      "user": {
        "type": "string",
        "description": "Reference to the user document",
        "pattern": "^/users/[a-zA-Z0-9]+$"
      }
    },
    "required": ["completed", "created", "title", "user"]
  }
  